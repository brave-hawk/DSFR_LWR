<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>DSFR Mot de passe</masterLabel>
    <description>Page DSFR de génération du reset password</description>
    <targets>
        <target>lightningCommunity__Page</target>  
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property   name="mainHeader"
                        label="Titre principal"
                        type="String"
                        default="Mot de passe oublié"
                        description="Titre principal du composant" />
            
            <property   name="formHeader"
                        label="Entête du formulaire"
                        type="String"
                        default="Identification"
                        description="Titre du formulaire" />
            <property   name="formDescription"
                        label="Description"
                        type="String"
                        description="Texte explicatif de la procédure" />
            <property   name="sendLabel"
                        label="Bouton d'envoi"
                        type="String"
                        default="Soumettre"
                        description="Libellé du bouton de connexion" />
            <property   name="targetPage"
                        label="Page cible"
                        type="String"
                        description="Salesforce page reference (JSON) de la page affichée après soumission" />

            <property   name="isDebug"
                        label="Debug ?"
                        type="Boolean"
                        default="false"
                        description="Activation de détails pour l'analyse de problèmes" />
         </targetConfig>
    </targetConfigs>
</LightningComponentBundle>