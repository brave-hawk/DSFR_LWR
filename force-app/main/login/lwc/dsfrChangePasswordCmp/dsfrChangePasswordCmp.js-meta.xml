        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property   name="mainTitle"
                        label="Titre principal"
                        type="String"
                        description="Titre principal du composant" />

            <property   name="formTitle"
                        label="Entête du formulaire"
                        type="String" 
                        description="Entête du formulaire de modification de mot de passe" />
            <property   name="formDescription"
                        label="Description"
                        type="String" 
                        description="Descriptif du formulaire" />
            <property   name="formHint"
                        label="Mention d'aide"
                        type="String" 
                        description="Mention d'aide du formulaire" />
            <property   name="formButton"
                        label="Libellé du bouton"
                        type="String"
                        description="Libellé du bouton de soumission du formulaire" />

            <property   name="isDebug"
                        label="Debug ?"
                        type="Boolean"
                        default="false"
                        description="Activation de traces pour l'analyse de problèmes" />

            <property   name="useCaptcha"
                        label="❌ Future Use"
                        type="Boolean" />
